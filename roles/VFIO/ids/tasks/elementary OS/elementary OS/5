---

- name: elementary OS | Ubuntu 20.04 & later
  block:
  - name: bind with script
    template:
      src: vfio.sh
      dest: /etc/initramfs-tools/scripts/init-top/vfio.sh
      owner: root
      mode: '0555'

  - name: bind modules
    lineinfile:
      path: /etc/initramfs-tools/modules
      line: 'options kvm ignore_msrs=1'
    notify: update initramfs

  - debug:
      msg: 'From inside block!'
  become: true

- name: Blacklist GPU driver
  blockinfile:
    path: /etc/modprobe.d/blacklist-gpu.conf
    create: yes
    block: |
      blacklist amdgpu
      blacklist nouveau
      blacklist nvidiafb
      options nouveau modeset=0
  notify:
    - update initramfs
  become: true
  when: ids.blacklist
